<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Register">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:background="@drawable/header"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:text="Mes ActivitÃ©es"
            android:textColor="#fff"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up pour contunue"
            android:textColor="#fbc02d"
            android:textSize="19dp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inscription"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="#ad16Bb"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="35dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="250dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="40dp" />

            <EditText
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/textbox"
                android:hint="Entrer votre email" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="40dp" />

            <EditText
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/textbox"
                android:hint="Entrer votre password" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Confirme password"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="40dp" />

            <EditText
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/textbox"
                android:hint="Confirmer votre password" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="40dp" />

            <EditText
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/textbox"
                android:hint="entrer votre nom" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Prenom"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="40dp" />

            <EditText
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/textbox"
                android:hint="entrer votre prenom" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Telephne"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="40dp" />

            <EditText
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/textbox"
                android:hint="+2126*********" />

        </LinearLayout>
    </ScrollView>
    <TextView
        android:layout_width="338dp"
        android:layout_height="30dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="35dp"
        android:gravity="end"
        android:text="forget password ?"
        android:textColor="#ad16Bb"

        android:textSize="18dp"
        android:textStyle="bold"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="303dp"
        android:layout_height="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/button"
        android:text="Inscrire"
        android:textColor="#fff"
        android:textSize="18dp"

        />

    <TextView  android:id="@+id/Sign_in"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:text="Tu as une compte? Sign in"
        android:textColor="#ad16Bb"
        android:textSize="18dp"
        android:textStyle="bold" />





</LinearLayout>

